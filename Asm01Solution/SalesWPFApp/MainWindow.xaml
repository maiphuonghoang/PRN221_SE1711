<Window x:Class="SalesWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="255" Width="370">
    <Grid Margin="0,0,10,0">
        <Label Content="Login" HorizontalAlignment="Left" Margin="132,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="27,73,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtEmail" HorizontalAlignment="Left" Margin="135,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="27,113,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtPassword" HorizontalAlignment="Left" Margin="135,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login"  Name="btnLogin" HorizontalAlignment="Left" Margin="105,179,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <Button Content="Exit"  Name="btnExit" HorizontalAlignment="Left" Margin="184,179,0,0" VerticalAlignment="Top" Click="btnExit_Click"/>
    </Grid>
</Window>
