<Window x:Class="SalesWPFApp.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
               Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel Background="White" Width="500" Margin="0 50 0 90" Orientation="Vertical">
            <Label Content="Login" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"></Label>

            <Label x:Name="lbEmail" Content="Email" Margin="65 10 0 0" FontWeight="Bold"></Label>
            <TextBox x:Name="txtEmail" Height="25" HorizontalAlignment="Stretch" Width="360"></TextBox>

            <Label x:Name="lbPassword" Content="Password" Margin="65 10 0 0" FontWeight="Bold"></Label>
            <PasswordBox x:Name="txtPassword" Height="25" HorizontalAlignment="Stretch" Width="360"></PasswordBox>

            <Button x:Name="btnLogin" Margin="0 20 0 20" Width="360" Height="25px" Content="Login" Click="btnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
